# Traefik Static Configuration
# This file is loaded at startup and requires container restart for changes
api:
  dashboard: {{ traefik_dashboard_enabled }}
  insecure: false  # Dashboard only via authenticated route
ping: {}
log:
  level: {{ traefik_log_level }}
accessLog:
  filePath: /var/log/traefik/access.log
  bufferingSize: 100
  filters:
    statusCodes:
      - "400-499"
      - "500-599"
# Entry Points
entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    address: ":443"
    http:
      tls:
        certResolver: letsencrypt
        domains:
          - main: "{{ traefik_domain }}"
            sans:
              - "*.{{ traefik_domain }}"
# Providers
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: {{ proxy_network }}
    watch: true
  file:
    directory: /config/dynamic
    watch: true
# Certificate Resolvers
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_acme_email }}
      storage: /config/acme/acme.json
      dnsChallenge:
        provider: cloudflare
        propagation:
          delayBeforeChecks: 30s
        resolvers:
          - "1.1.1.1:53"
          - "8.8.8.8:53"
