# {{ ansible_managed }}
name: {{ stack_name }}

services:
  gluetun:
    image: qmcgaw/gluetun
    container_name: gluetun
    env_file:
      - ./env/gluetun.env
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun
    networks:
      - vpn
    ports:
      - 6881:6881/tcp
      - 6881:6881/udp
    volumes:
      - ./config/gluetun:/gluetun
    restart: {{ restart_policy }}
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://localhost:8000/v1/openvpn/status"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
      start_period: {{ healthcheck_start_period }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  huntarr:
    image: ghcr.io/plexguide/huntarr:latest
    container_name: huntarr
    restart: always
    networks:
      - shared
    ports:
      - "9705:9705"
    volumes:
      - /config/huntarr:/config
    environment:
      - TZ={{ timezone }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: "5m"
        max-file: {{ logging_max_file }}

  prowlarr:
    restart: {{ restart_policy }}
    image: linuxserver/prowlarr
    networks:
      - shared
    ports:
      - 9696:9696
    volumes:
      - ./config/prowlarr:/config
    environment:
      - TZ={{ timezone }}
      - PUID={{ puid }}
      - PGID={{ pgid }}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9696/ping"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  flood:
    image: jesec/rtorrent-flood
    container_name: flood
    networks:
      - shared
    ports:
      - 3001:3001
    depends_on:
      gluetun:
        condition: service_healthy
    cap_add:
      - NET_BIND_SERVICE
      - NET_RAW
    restart: {{ restart_policy }}
    command: --port 3001 --allowedpath /downloads --noauth --rtsocket /config/.local/share/rtorrent/rtorrent.sock
    volumes:
      - ./config/rtorrent:/config
      - downloads:/downloads
    environment:
      - HOME=/config
      - TZ={{ timezone }}
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:3001"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  sonarr:
    restart: {{ restart_policy }}
    image: linuxserver/sonarr
    networks:
      - shared
    ports:
      - 8989:8989
    volumes:
      - ./config/sonarr:/config
      - television:/television
      - anime:/anime
      - downloads:/downloads
    environment:
      - TZ={{ timezone }}
      - PUID={{ puid }}
      - PGID={{ pgid }}
    depends_on:
      prowlarr:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8989/ping"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  radarr:
    restart: {{ restart_policy }}
    image: linuxserver/radarr
    networks:
      - shared
    ports:
      - 7878:7878
    volumes:
      - ./config/radarr:/config
      - movies:/movies
      - downloads:/downloads
    environment:
      - TZ={{ timezone }}
      - PUID={{ puid }}
      - PGID={{ pgid }}
    depends_on:
      prowlarr:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7878/ping"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  lidarr:
    restart: {{ restart_policy }}
    image: linuxserver/lidarr
    networks:
      - shared
    ports:
      - 8686:8686
    volumes:
      - ./config/lidarr:/config
      - music:/music
      - downloads:/downloads
    environment:
      - TZ={{ timezone }}
      - PUID={{ puid }}
      - PGID={{ pgid }}
    depends_on:
      prowlarr:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8686/ping"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  jellyseer:
    image: fallenbagel/jellyseerr:latest
    restart: {{ restart_policy }}
    networks:
      - shared
    ports:
      - 5055:5055
    volumes:
      - ./config/jellyseerr:/app/config
    environment:
      - TZ={{ timezone }}
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:5055/api/v1/status"]
      start_period: 20s
      timeout: 3s
      interval: 15s
      retries: 3
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

  unpackerr:
    image: golift/unpackerr
    restart: {{ restart_policy }}
    networks:
      - shared
    volumes:
      - ./config/unpackerr:/config
      - downloads:/downloads
    env_file:
      - ./env/unpackerr.env
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: "5m"
        max-file: {{ logging_max_file }}

  stash:
    image: stashapp/stash:latest
    restart: {{ restart_policy }}
    networks:
      - shared
    ports:
      - 9999:9999
    logging:
      driver: {{ logging_driver }}
      options:
        max-file: "10"
        max-size: "2m"
    env_file:
      - ./env/stash.env
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ./config:/root/.stash
      - private:/data
      - ./metadata:/metadata
      - ./cache:/cache
      - ./blobs:/blobs
      - ./generated:/generated
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:9999/healthz"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}

  pinchflat:
    image: ghcr.io/kieraneglin/pinchflat:dev
    container_name: pinchflat
    restart: {{ restart_policy }}
    networks:
      - shared
    ports:
      - 8945:8945
    volumes:
      - ./config/pinchflat:/config
      - downloads:/downloads
    environment:
      - TZ={{ timezone }}
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:8945"]
      interval: {{ healthcheck_interval }}
      timeout: {{ healthcheck_timeout }}
      retries: {{ healthcheck_retries }}
    logging:
      driver: {{ logging_driver }}
      options:
        max-size: {{ logging_max_size }}
        max-file: {{ logging_max_file }}

volumes:
  videos:
    external: true
  television:
    external: true
  anime:
    external: true
  movies:
    external: true
  music:
    external: true
  downloads:
    external: true
  private:
    external: true

networks:
  vpn:
    name: vpn-network
    internal: false
  shared:
    name: {{ shared_network }}
    external: true
