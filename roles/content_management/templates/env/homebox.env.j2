# {{ ansible_managed }}
# HomeBox environment variables - generated from Ansible Vault

# General
TZ={{ timezone }}
HBOX_LOG_LEVEL={{ homebox_log_level }}
HBOX_LOG_FORMAT={{ homebox_log_format }}
HBOX_WEB_MAX_UPLOAD_SIZE={{ homebox_max_upload_size }}
HBOX_OPTIONS_ALLOW_ANALYTICS={{ homebox_allow_analytics }}
HBOX_OPTIONS_ALLOW_REGISTRATION={{ homebox_allow_registration }}
HBOX_OPTIONS_TRUST_PROXY={{ homebox_trust_proxy }}
HBOX_OPTIONS_ALLOW_LOCAL_LOGIN={{ homebox_allow_local_login }}
HBOX_OPTIONS_HOSTNAME={{ homebox_domain }}

# OIDC
HBOX_OIDC_ENABLED={{ homebox_oidc_enabled }}
HBOX_OIDC_ISSUER_URL={{ homebox_oidc_issuer_url }}
HBOX_OIDC_CLIENT_ID={{ homebox_oidc_client_id }}
HBOX_OIDC_CLIENT_SECRET={{ homebox_oidc_client_secret }}
HBOX_OIDC_SCOPE={{ homebox_oidc_scope }}
HBOX_OIDC_BUTTON_TEXT={{ homebox_oidc_button_text }}
HBOX_OIDC_AUTO_REDIRECT={{ homebox_oidc_auto_redirect }}
HBOX_OIDC_VERIFY_EMAIL={{ homebox_oidc_verify_email }}
