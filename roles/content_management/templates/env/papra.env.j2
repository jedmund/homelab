# {{ ansible_managed }}
# Papra environment variables - generated from Ansible Vault

# Server
PUBLIC_BASE_URL={{ papra_base_url }}
APP_BASE_URL={{ papra_base_url }}
PROCESS_MODE={{ papra_process_mode }}
DATABASE_URL={{ papra_database_url }}
STORAGE_DRIVER={{ papra_storage_driver }}
STORAGE_ROOT={{ papra_storage_root }}
AUTH_SECRET={{ papra_auth_secret }}

# Registration
REGISTRATION_ENABLED={{ papra_registration_enabled }}
FIRST_USER_IS_ADMIN={{ papra_first_user_admin }}

# OCR
OCR_LANGUAGES={{ papra_ocr_languages }}

# OAuth2/OIDC Providers
AUTH_PROVIDERS_CUSTOMS='[{"providerId": "{{ papra_oidc_provider_id }}", "providerName": "{{ papra_oidc_provider_name }}", "type": "oidc", "discoveryUrl": "{{ papra_oidc_discovery_url }}", "clientId": "{{ papra_oidc_client_id }}", "clientSecret": "{{ papra_oidc_client_secret }}", "scopes": {{ papra_oidc_scopes | to_json }}}]'
